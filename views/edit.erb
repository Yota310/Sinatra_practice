
<form action="/memos/<%= params[:id] %>" method="post">
  <div class="mb-3">
    <label for="title" class="form-label">タイトル</label>
    <input type="text" id="title" name="title" value="<%= h(@memo['title']) %>" class="form-control">
  </div>
  <div class="mb-3">
    <label for="memo" class="form-label">内容</label>
    <textarea id="memo" name="memo" class="form-control"><%= h(@memo['memo']) %></textarea>
  </div>
  <div>
    <input type="hidden" name="_method" value="post">
    <input type="submit" value="保存" class="btn btn-primary">
  </div>
</form>
